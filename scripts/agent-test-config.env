# KubeDB Monitor Agent 테스트 설정
# 이 파일을 수정하여 테스트 환경을 커스터마이징하세요

# 기본 Kubernetes 설정
TEST_NAMESPACE=kubedb-monitor-test
DEPLOYMENT_NAME=university-registration
SERVICE_NAME=university-registration-service
INGRESS_NAME=university-registration-demo-ingress
TEST_DOMAIN=university-registration.bitgaram.info

# Docker 이미지 설정
IMAGE_TAG=latest
AGENT_IMAGE=registry.bitgaram.info/kubedb-monitor/agent
APP_IMAGE=registry.bitgaram.info/kubedb-monitor/university-registration

# 테스트 설정
TEST_TIMEOUT=300          # Agent 시작 대기 시간 (초)
API_TIMEOUT=10           # API 호출 타임아웃 (초)
DEBUG=false              # 디버그 모드 (true/false)

# PostgreSQL 연결 설정
DB_HOST=postgres-cluster-rw.postgres-system
DB_PORT=5432
DB_NAME=university
DB_USERNAME=univ-app
DB_PASSWORD=qlcrkfka1#

# Control Plane 설정
CONTROL_PLANE_ENDPOINT=http://kubedb-monitor-control-plane.kubedb-monitor:8080/api/metrics

# 개발자 설정
CLEANUP_ON_EXIT=false     # 스크립트 종료 시 자동 정리
SKIP_PREREQUISITES=false  # 사전 조건 체크 생략
PARALLEL_TESTS=false      # 병렬 테스트 (실험적)